group {
	use-host-decl-names on;
	ddns-updates off;
{% for host in local_hosts %}
{% if 'mac' in host and 'ipv4' in host %}

{% if 'description' in host %}
	# {{ host.description }}
{% endif %}
	host {{ host.name }} {
		hardware ethernet {{ host.mac }};
		fixed-address {{ host.ipv4|join(', ') }};
{% if 'filename' in host %}
		filename "{{ host.filename }}";
{% endif %}
	}
{% endif %}
{% endfor %}
}
